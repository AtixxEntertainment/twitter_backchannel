<div class="align_center">
  <%= image_tag "/images/samsa.png", id: "samsa-header" %>
  <h4>
    <a href="http://samsarpg.com" target="_blank">www.samsarpg.com</a>
  </h4>
</div>
<div class="clear"></div>

<div class="the_tweets">
  <%= render @tweets %>
</div>

